{
  "name": "offload-project/laravel-mandate",
  "description": "Unified authorization management for Laravel - roles, permissions, and feature flags in a type-safe API",
  "keywords": [
    "laravel",
    "permissions",
    "feature-flags",
    "pennant",
    "spatie",
    "authorization"
  ],
  "homepage": "https://github.com/offload-project/laravel-mandate",
  "license": "MIT",
  "authors": [
    {
      "name": "Offload Project"
    }
  ],
  "require": {
    "php": "^8.4",
    "illuminate/contracts": "^11.0|^12.0",
    "illuminate/support": "^11.0|^12.0",
    "spatie/laravel-data": "^4.18",
    "spatie/laravel-permission": "^6.24.0"
  },
  "require-dev": {
    "larastan/larastan": "^3.8.1",
    "laravel/pennant": "^1.18.5",
    "laravel/pint": "^1.26.0",
    "orchestra/testbench": "^9.0|^10.8.0",
    "pestphp/pest": "^3.0|^4.0",
    "pestphp/pest-plugin-laravel": "^3.0|^4.0",
    "offload-project/laravel-hoist": "^1.0.0"
  },
  "autoload": {
    "psr-4": {
      "OffloadProject\\Mandate\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OffloadProject\\Mandate\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "OffloadProject\\Mandate\\MandateServiceProvider"
      ],
      "aliases": {
        "Mandate": "OffloadProject\\Mandate\\Facades\\Mandate"
      }
    }
  },
  "scripts": {
    "test": "pest",
    "test-coverage": "pest --coverage",
    "analyse": "phpstan analyse --memory-limit=-1",
    "analyse-baseline": "phpstan analyse --memory-limit=-1 --generate-baseline",
    "pint": "vendor/bin/pint"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
